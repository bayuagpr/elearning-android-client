<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue_dark</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:label">@style/RobotoButtonStyle</item>
    </style>



    <style name="ToolBarStyle" parent="">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="RobotoTextViewStyle">
        <item name="android:fontFamily">@font/nunitosans_regular</item>
    </style>

    <style name="RobotoButtonStyle">
        <item name="android:fontFamily">@font/nunitosans_regular</item>
    </style>

    <style name="ButtonPrimary" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/blue_light</item>
        <item name="colorButtonNormal">@color/blue_dark</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
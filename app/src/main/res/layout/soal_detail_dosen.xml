<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F4F5F7">

    <com.elearning.client.utils.StickyScrollView
        android:id="@+id/scrollstickySoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:elevation="6dp">
    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="sticky">
                <androidx.appcompat.widget.Toolbar
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:elevation="3dp">

                    <ImageView
                        android:id="@+id/backToListSoal"
                        android:layout_marginTop="5dp"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_left_arrow" />

                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right">


                    </LinearLayout>


                </androidx.appcompat.widget.Toolbar>
            </LinearLayout>



        </FrameLayout>

        <LinearLayout
            android:background="@drawable/bottom_rect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:tag="sticky">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvpriceSoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Comming Soon"
                    android:textColor="#606674"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvaddressSoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lines="3"
                    android:layout_marginLeft="5dp"
                    android:text="Comming Soon"
                    android:textColor="#adb3c0"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/tvdescSoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lines="1"
                    android:minLines="1"
                    android:maxLines="3"
                    android:layout_marginLeft="5dp"
                    android:text="Comming Soon"
                    android:textColor="#adb3c0"
                    android:textSize="16dp" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="15dp">

                        <Button
                            android:id="@+id/btnLihatSoal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:elevation="5dp"
                            android:padding="8dp"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:text="Lihat Berkas Soal"
                            android:background="@color/blue_dark"
                            android:textColor="#fff"
                            android:textSize="15dp" />

                        <Button
                            android:id="@+id/btnAturSoal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:elevation="5dp"
                            android:padding="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:text="PENGATURAN SOAL"
                            android:background="@color/blue_dark"
                            android:textColor="#fff"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvlistSoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginLeft="5dp"
                        android:text="Hasil Jawaban Soal"
                        android:textColor="#606674"
                        android:textSize="20dp" />


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/shadow_down">

        </LinearLayout>-->





    </LinearLayout>
    </com.elearning.client.utils.StickyScrollView>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scrollstickySoal">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/bubbleTabBarSoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:tabSelectedTextColor="@color/blue_dark"
            app:tabTextColor="@android:color/black">


        </com.google.android.material.tabs.TabLayout>

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>